extends layout

block content

    header
    #Converse-logo
        img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSQl_t546PSrPv4eEmWYCzCI__OLbN2MOywXPaz5ikTew&s" width="150px")

    h1= title

    //- include equivalence_form.pug
    include equivalence_form

    h2 Results of query: <q>#{query}</q>

    if !rows
        p No result
    else if rows.length == 0
        p Empty result
    else
        table
            thead
                tr
                    each key in Object.keys(rows[0])
                        th= key
            tbody
                each row in rows
                    tr
                        each val in Object.values(row)
                            td= val